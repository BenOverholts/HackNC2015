script.
    var myVar = setInterval(myTimer, 100);
    var prog = 0;

    var before = new Date();
    var interval = (100000/6);

    function myTimer() {
        now = new Date();
        var elapsedTime = (now.getTime() - before.getTime());

        if(elapsedTime > interval) {
            prog += Math.floor(elapsedTime/interval);
        }
        else {
            prog+=0.5
        }

        var bar = document.getElementsByClassName("progress-bar-striped")[0];
        
        bar.style.width = prog+'%';

        if (prog>=100) {
            bar.style.width=100+'%';
            clearInterval(myVar);
        }
        
    }


